<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Calender" Height="350" Width="550">
    <Grid Height="320" Width="530">
        <Calendar Name="cldDate" SelectedDatesChanged="cldDate_SelectedDatesChanged" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <ListBox Name="lbxEvents" SelectionChanged="lbxEvents_SelectionChanged" Margin="212,10,10,81"/>

        <Label Content="Time" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txbTime" HorizontalAlignment="Left" Margin="69,183,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="26"/>

        <Label Content="Name" HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txbName" HorizontalAlignment="Left" Margin="69,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="26"/>
        
        <Button Name="btnAdd" Content="Add task" Click="AddButton_Click" HorizontalAlignment="Left" Margin="112,261,0,0" VerticalAlignment="Top" Width="77" RenderTransformOrigin="1.328,0.342" Height="28"/>

        <Button Name="btnRemove" Content="Remove task" Click="RemoveButton_Click" IsEnabled="False" HorizontalAlignment="Left" Margin="438,261,0,0" VerticalAlignment="Top" Width="77" RenderTransformOrigin="1.328,0.342" Height="28"></Button>
    </Grid>
</Window>
