<Window x:Class="AdvancedCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedCalculator"
        mc:Ignorable="d"
        Title="Calculator" Height="400" Width="300">
    <Grid Height="330" Width="300">
        <TextBox Name="tbxInput" FontSize="24" TextAlignment="Right" HorizontalAlignment="Center" Margin="0,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" Height="40"/>
        <Button Content="7" HorizontalAlignment="Left" Margin="25,54,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="8" HorizontalAlignment="Left" Margin="80,54,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="136,54,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="25,109,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="80,109,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="136,109,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="1" HorizontalAlignment="Left" Margin="25,164,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="80,164,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="136,164,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="0" HorizontalAlignment="Left" Margin="25,219,0,0" VerticalAlignment="Top" Height="50" Width="161" Click="OnButtonClick"/>

        <Button Content="+" HorizontalAlignment="Left" Margin="224,54,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="224,109,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="*" HorizontalAlignment="Left" Margin="224,164,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="224,219,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="OnButtonClick"/>
        
        <Button Content="Compute" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Height="50" Width="250" Click="OnComputeButtonClick"/>

    </Grid>
</Window>
